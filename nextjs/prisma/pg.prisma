// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Music {
    id          Int           @id @default(autoincrement())
    mid         String        @unique @db.VarChar(50)
    url         String        @db.VarChar(255)
    name        String        @db.VarChar(50)
    albumId     Int?
    lyricId     Int?
    size        Int           @db.Integer
    createdAt   DateTime      @default(now())
    Favorite    Favorite?
    MusicArtist MusicArtist[]
    Album       Album?        @relation(fields: [albumId], references: [id])
    Lyric       Lyric?        @relation(fields: [lyricId], references: [id])
}

model Lyric {
    id    Int     @id @default(autoincrement())
    lyric String  @db.Text
    Music Music[]
}

model MusicArtist {
    id       Int    @id @default(autoincrement())
    musicId  Int
    singerId Int
    Music    Music  @relation(fields: [musicId], references: [id])
    Singer   Singer @relation(fields: [singerId], references: [id])

    @@unique([musicId, singerId])
}

model Singer {
    id          Int           @id @default(autoincrement())
    mid         String        @unique @db.VarChar(50)
    name        String        @db.VarChar(200)
    picture     String?       @db.Text
    songCount   Int           @default(0)
    MusicArtist MusicArtist[]
    Album       Album[]
}

model Album {
    id       Int     @id @default(autoincrement())
    singerId Int
    name     String  @db.VarChar(50)
    coverId  Int?
    Singer   Singer  @relation(fields: [singerId], references: [id])
    Cover    Cover?  @relation(fields: [coverId], references: [id])
    Music    Music[]

    @@unique([singerId, name])
}

model Cover {
    id    Int     @id @default(autoincrement())
    url   String  @db.VarChar(50)
    Album Album[]
}

model Favorite {
    id      Int   @id @default(autoincrement())
    music   Music @relation(fields: [musicId], references: [id])
    musicId Int   @unique
}

model Job {
    id     Int       @id @default(autoincrement())
    params String    @db.Text
    status JobStatus @default(Pending)
}

enum JobStatus {
    Pending
    Running
    Failed
    Done
}
